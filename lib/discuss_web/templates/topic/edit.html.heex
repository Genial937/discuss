<%= form_for @changeset, Routes.topic_path(@conn, :update, @topic), fn f -> %>
   <div class="form-group">
    <%= text_input f, :title, class: "form-control", placeholder: "Title" %>
    <%= error_tag f, :title %>
   </div>
   <div class="form-group">
   <%= submit "Update Topic", class: "btn btn-success" %>
   </div>
<%  end %>